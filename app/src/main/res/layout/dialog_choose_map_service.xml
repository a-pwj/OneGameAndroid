<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/dialog_space"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/app_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:gravity="center"
            android:text="客户服务"
            android:textColor="@color/app_second_textcolor"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@color/app_splite_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/dialog_service_error"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/icon_map_error_report"
                android:drawablePadding="17dip"
                android:textColor="@color/app_textcolor"
                android:text="球场信息上报"/>
            <TextView
                android:id="@+id/dialog_servie_contanct"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/icon_map_service_report"
                android:drawablePadding="17dip"
                android:textColor="@color/app_textcolor"
                android:text="申请球场合作"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>