<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_background"
    android:layout_width="260dip"
    android:layout_height="270dip">

    <ImageView
        android:id="@+id/item_poster_image"
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/item_poster_colorbg"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:background="@drawable/poster_gradient_color"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/poster_splite_line"
        android:layout_marginTop="180dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="15dip"
        android:textColor="@android:color/white"
        android:text="支付后自动生成比赛海报"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dip"
        android:layout_marginBottom="36dip"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="齐达内版"/>

    <TextView
        android:id="@+id/item_poster_pricenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:layout_marginBottom="4dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:lineSpacingExtra="0dip"
        android:textColor="@android:color/white"
        android:text="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="￥"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@id/item_poster_pricenum"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dip"/>
</RelativeLayout>