<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="44dip"/>

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/team_picker"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="270dip" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_poster_pay_bg"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dip"
                android:layout_centerInParent="true"
                android:textColor="@color/app_textcolor"
                android:drawableTop="@mipmap/icon_poster_weixin"
                android:text="微信支付"/>
        </RelativeLayout>
        <android.support.v4.widget.Space
            android:layout_width="10dip"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:textColor="@color/app_textcolor"
                android:drawableTop="@mipmap/icon_poster_alipay"
                android:drawablePadding="10dip"
                android:text="支付宝支付"/>
        </RelativeLayout>
        <android.support.v4.widget.Space
            android:layout_width="10dip"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:drawablePadding="10dip"
                android:layout_centerInParent="true"
                android:textColor="@color/app_textcolor"
                android:drawableTop="@mipmap/icon_poster_wallet"
                android:text="钱包支付"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/app_second_textcolor"
        android:text="支付完成后拥有此海报使用权限"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="15dip"
        android:layout_height="44dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/colorAccent"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:text="购买"/>
</LinearLayout>