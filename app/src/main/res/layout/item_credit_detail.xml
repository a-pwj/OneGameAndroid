<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="70dip">

    <ImageView
        android:id="@+id/item_credit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dip"
        android:src="@mipmap/icon_credit_gread"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_credit_icon"
        android:layout_marginLeft="19dip"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/app_textcolor"
            android:text="比赛完成"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dip"
            android:textSize="12sp"
            android:textColor="@color/app_second_textcolor"
            android:text="评估时间：2017-08-21"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:textColor="@color/app_second_textcolor"
        android:layout_alignParentRight="true"
        android:text="信用积分+1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_splite_line"/>
</RelativeLayout>