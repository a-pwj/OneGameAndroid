<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ddffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/more_menu_wx_circle"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_menu_more_wx_circle"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dip" />
        <ImageButton
            android:id="@+id/more_menu_wx_friend"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_menu_more_wx_friend"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dip" />
        <ImageButton
            android:id="@+id/more_menu_weibo"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_menu_more_weibo"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dip" />
        <ImageButton
            android:id="@+id/more_menu_qq"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_menu_more_qq"/>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dip" />
        <ImageButton
            android:id="@+id/more_menu_jubao"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_menu_more_jubao"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/more_menu_close"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_menu_more_close"/>
</RelativeLayout>