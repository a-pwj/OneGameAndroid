<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   
    <ImageButton
        android:id="@+id/login_close_button"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_login_close"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_marginLeft="20dip"
        android:textColor="@color/app_textcolor"
        android:text="手机验证"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dip"
        android:textSize="12sp"
        android:textColor="@color/app_second_textcolor"
        android:layout_marginLeft="20dip"
        android:lineSpacingMultiplier="1.3"
        android:text="请输入您的手机号码,\n登录或注册您的一场账号"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="23dip"
        android:layout_height="44dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/app_not_choosed_bg"
            android:hint="请输入您的手机号"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textSize="14sp"
            android:textColor="@color/app_textcolor"
            android:textColorHint="@color/app_second_textcolor"
            android:layout_weight="1"/>

        <Button
            android:layout_width="94dip"
            android:layout_marginLeft="8dip"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="获取验证码"
            android:background="@drawable/nomal_button_bg"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dp"
        android:paddingRight="10dip"
        android:textSize="14sp"
        android:textColor="@color/app_textcolor"
        android:hint="请输入验证码"
        android:textColorHint="@color/app_second_textcolor"
        android:background="@color/app_not_choosed_bg"/>

    <Button
        android:id="@+id/login_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@drawable/nomal_button_bg"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:text="开始"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginRight="10dip"/>

    <com.guohe.onegame.custome.AutoLinkStyleTextView
        android:id="@+id/recharge_protocl"
        android:layout_marginTop="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#898989"
        android:text="点击开始，即表示已阅读并同意《一场服务协议》"
        app:AutoLinkStyleTextView_text_value="《一场服务协议》,"
        app:AutoLinkStyleTextView_default_color="@color/colorAccent"
        app:AutoLinkStyleTextView_has_under_line="false"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dip"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/app_splite_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:text="使用社交账号"/>
        <View
            android:layout_width="0dip"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/app_splite_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:gravity="center"
        android:orientation="horizontal">
        
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_login_weixin"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dip"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_login_qq"/>
    </LinearLayout>
</LinearLayout>