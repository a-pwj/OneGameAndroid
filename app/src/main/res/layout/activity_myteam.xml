<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f4f6f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myteam_toolbar"
        android:layout_width="match_parent"
        android:background="#262930"
        android:layout_height="44dip">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_arrow_back_white"/>


        <ImageButton
            android:id="@+id/toolbar_setting"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_setting_white"/>
    </RelativeLayout>

    <View
        android:layout_below="@id/myteam_toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#262930"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/myteam_addgame"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_my_team_creategame"/>

        <ImageButton
            android:id="@+id/myteam_ranking"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_my_team_sort"/>
    </LinearLayout>
    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/team_picker"
        android:layout_marginTop="52dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>