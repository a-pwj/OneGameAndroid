<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f4f6f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myteam_toolbar"
        android:layout_width="match_parent"
        android:background="#262930"
        android:layout_height="44dip">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_arrow_back_white"/>


        <ImageButton
            android:id="@+id/toolbar_more"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_setting_white"/>
    </RelativeLayout>

    <View
        android:layout_below="@id/myteam_toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#262930"/>

    <ImageButton
        android:id="@+id/myteam_addgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dip"
        android:layout_marginLeft="89dip"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_my_team_creategame"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dip"
        android:layout_marginRight="89dip"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_my_team_sort"/>

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/team_picker"
        android:layout_marginTop="52dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>